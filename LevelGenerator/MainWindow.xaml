<Window x:Class="LevelGen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="800" Width="950">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Width="60" Click="OnDesignerOpen">Designer</Button>
            <Button Width="100" Click="OnRoomManagerOpen">Room Manager</Button>
            <Button Width="60" Click="OnGenerate">Generate</Button>
            <Label>Width:</Label>
            <TextBox Name="WidthTextBox" Width="30">80</TextBox>
            <Label>Height:</Label>
            <TextBox Name="HeightTextBox" Width="30">40</TextBox>
            <Label>Ratio:</Label>
            <TextBox Name="RatioTextBox" Width="30">0.6</TextBox>
            <CheckBox Name="DefaultCheckBox" Margin="5" IsChecked="True">Use Default Rooms</CheckBox>
        </StackPanel>
        <ScrollViewer Grid.Row="1" Height="550" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" >
            <Canvas Name="GameCanvas"></Canvas>
        </ScrollViewer>
    </Grid>
</Window>
