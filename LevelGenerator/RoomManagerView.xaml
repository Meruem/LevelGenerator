<Window x:Class="LevelGen.RoomManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RoomManagerWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="121*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Width="80" Click="OnOpenFiles">Open Files</Button>
            <Button Width="80" Click="OnOpenFolder">Open Folder</Button>
            <Button Width="80" Click="OnClear">Clear</Button>
            <TextBox Width="150" Name="PathTextBox">C:\Projects\LevelGenerator\RoomBlueprints\</TextBox>
        </StackPanel>
        <ListBox Grid.Row="1" Name="RoomsListBox">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding }"></TextBlock>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>